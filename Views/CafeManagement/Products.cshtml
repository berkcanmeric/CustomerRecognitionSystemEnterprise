<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/customer-page.css"/>
    <link rel="stylesheet" href="~/css/common.css?newversion"/>
    <!-- Include the required CSS files -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css"/>

    <!-- Include jQuery and the DataTables JavaScript files -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
</head>
<body>
<table id="product-table">
    <thead>
    <tr>
        <th>Ad</th> <th>Fiyat</th> <th>Kategori</th> <th>Resim</th> @* <th>En Çok Satan</th> *@ <th>Düzenle</th> <th>Sil</th>
    </tr>
    </thead> <tbody> </tbody>
</table> <!-- Add a button to open the add modal --> <button id="add-button" class="add-button"><i class="fas fa-plus"></i>Ürün Ekle</button> <!-- Edit Modal -->
<div id="edit-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Ürünü Düzenle</h2>
        <form id="edit-form">
            <label for="name">Ad:</label> <input type="text" id="name" name="name" required>
            <label for="price">Fiyat:</label>
            <input type="number" id="price" name="price" min="0" step="0.01" required>

            <label for="category">Kategori:</label>
            <input type="text" id="category" name="category" required>

            <label for="imageUrl">Resim URL'si:</label>
            <input type="text" id="imageUrl" name="imageUrl" required>

            @* <label for="isBestSelling">En Çok Satan:</label> *@
            @* <input type="checkbox" id="isBestSelling" name="isBestSelling"> *@

            <input type="submit" value="Kaydet">
        </form>
    </div>
</div> <!-- Add Modal -->
<div id="add-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Ürün Ekle</h2>
        <form id="add-form">
            <label for="name">Ad:</label> <input type="text" id="name" name="name" required> <label for="price">Fiyat:</label>
            <input type="number" id="price" name="price" min="0" step="0.01" required>

            <label for="category">Kategori:</label>
            <input type="text" id="category" name="category" required>

            <label for="imageUrl">Resim URL'si:</label>
            <input type="text" id="imageUrl" name="imageUrl" required>

            @* <label for="isBestSelling">En Çok Satan:</label> *@
            @* <input type="checkbox" id="isBestSelling" name="isBestSelling"> *@

            <input type="submit" value="Ekle">
        </form>
    </div>
</div>
</body>
</html>
<script>
$(document).ready(function () {
    $.noConflict();
    var table = $('#product-table').DataTable({
        "paging": true, // Enable pagination
        "pageLength": 5, // Number of rows per page

        "dom": '<"row"<"col-sm-12 text-center"<"h3 mb-0">>><"row"tr><"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>tip', // Add a title section and length changing input above the table
        "language": {
            "info": "Showing _START_ to _END_ of _TOTAL_ entries"
        },columnDefs: [{
              "defaultContent": "",
              "targets": "_all"
            }]
     
    });
    $("div.h3").html("Ürünler"); // Set the title text
});
</script>
<script type="module" src="~/lib/firebase/products-page.js?newversion"></script>
